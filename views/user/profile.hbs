
<style>
.value{
    
     background: linear-gradient(to bottom, #ffcc99 0%, #ccff99 98%)
}
</style>

<div class="value row">
    <div class="profile" style="padding-left: 350px; padding-right:350px">
        <br>
        <h1>User Profile</h1>
        <hr>
        <h2 class="text-center">My Orders</h2>
        {{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group" >
                        {{# each this.items }}
                            <li class="list-group-item">
                                 {{ this.item.title }} | {{ this.item.description }}  &nbsp; -  &nbsp; Rs.{{ this.price }}
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong style="font-size: large;">Total Price: Rs.{{ this.cart.totalPrice }}</strong><br><br>
                </div>
            </div>
        {{/each}}
    </div>
</div>