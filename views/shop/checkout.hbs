<style>
    .login-form {
    width: 500px;
    height: 500px;
    margin: 50px ;
  	font-size: 20px;
   margin-left: 450px;
}
.login-form form {
    margin-bottom: 15px;
    background: #f7f7f7;
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    padding: 30px;
}
.login-form h2 {
    margin: 0 0 15px;
}
.login-form, .form-control, .btn {
    min-height: 38px;
  
}
.login-form, .btn {        
    font-size: 15px;
    font-weight: bold;
     
}
.value{
    background: linear-gradient(to bottom left, #ccccff 13%, #ffcccc 100%)
}
</style>
<div class="value">
<div class=" col-md-4">
    
        
        <br>
        <div class="login-form">
        
        <form action="/checkout" method="post" id="checkout-form">
        <div id="charge-error" class="text-center alert  alert-error {{#if noError}} hidden {{/if}}" role="alert" style="color: red;" >
            {{errMsg}}
        </div>
        <h1 class="text-center">Checkout</h1>
        <h4 style="color: red;">Your Total: Rs.{{total}}</h4><br>
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" class="form-control" required name="name">
                    </div>
                </div><br><br>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" id="address" class="form-control" required name="address">
                    </div>
                </div>
              <br>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-name">Card Holder Name</label>
                        <input type="text" id="card-name" class="form-control" required>
                    </div>
                </div><br>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-number">Credit Card Number</label>
                        <input type="text" id="card-number" class="form-control" required>
                    </div>
                </div><br>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="card-expiry-month">Expiration Month</label>
                                <input type="text" id="card-expiry-month" class="form-control" required>
                            </div>
                        </div><br>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="card-expiry-year">Expiration Year</label>
                                <input type="text" id="card-expiry-year" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </div><br>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-cvc">CVC</label>
                        <input type="text" id="card-cvc" class="form-control" required>
                    </div>
                </div>
            </div><br>
            <button type="submit" class=" btn  btn-success">Buy now</button>
        </form>
    </div>
</div>

<br><br><br><br><br><br><br>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>

<script  src="javascripts/checkout.js"></script>